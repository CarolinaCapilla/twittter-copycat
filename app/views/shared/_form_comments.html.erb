<div class="section">

  <div class="columns">
    <div class="column is-1">
      <div class="avatar-small">
        <%= image_tag current_user.avatar %>
      </div>
    </div>
    <div class="column is-11">
      <%= simple_form_for([@tweeet, @comment]) do |f| %>
        <div class="field">
          <div class="control">
            <%= f.input :comment, label: false, input_html: { class: 'input' }, wrapper: false, placeholder: 'Add a comment'  %>
          </div>
        </div>
        <nav class="level">
          <div class="level-left">
            <div class="level-item">
              <%= f.button :submit, 'Leave a reply', class: "button is-primary is-small" %>
            </div>
          </div>
        </nav>
      </div>
    <% end %>
  </div>
</div>
