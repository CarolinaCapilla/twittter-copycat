<% @tweeet.comments.each do |comment| %>
  <div class="box">
    <article class="media">
      <div class="media-content">
        <div class="content">
          <div class="image is-64x64 avatar">
            <%= image_tag comment.user.avatar %>
          </div>
          <small>
            <%= comment.user.username %>
          </small>
          <strong>
            <%= comment.comment %>
          </strong>
          <%= comment.created_at %>
          <% if current_user == comment.user %>
            <nav class="level">
              <div class="level is-mobile">
                <%= link_to comment_path(comment), method: :delete, data: {confirm: 'Are you sure you want to delete this comment?'}, class: 'level-item' do  %>
                  <span class="icon">
                    <i class="fa fa-trash-o" aria-hidden="true"></i>
                  </span>
                <% end %>
                <%= link_to tweeet_comment_path(comment), class: 'level-item' do %>
                  <span class="icon">
                    <i class="fa fa-pencil" aria-hidden="true"></i>
                  </span>
                <% end %>
              </div>
            <% end %>
          </nav>
        </div>
      </article>
    </div>
  <% end %>
</div>
<%= link_to 'Back', tweeets_path %>
