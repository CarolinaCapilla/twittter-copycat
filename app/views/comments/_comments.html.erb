<nav class="panel">
  <p class="panel-heading has-text-centered has-text-weight-bold">Comments</p>
</nav>
<% @tweeet.comments.each do |comment| %>
  <div class="box">
    <article class="media">
      <div class="media-content">
        <div class="content">
          <div class="avatar">
            <%= image_tag comment.user.avatar %>
            <small>
              <%= comment.user.username %>
            </small>
            <br>
              <strong>
                <%= comment.comment %>
              </strong>
            </div>
          </div>
          <% if current_user == comment.user %>
            <nav class="level">
              <div class="level-left">
                <%= link_to comment_path(comment), method: :delete, data: {confirm: 'Are you sure you want to delete this comment?'}, class: 'level-item' do  %>
                  <span class="icon">
                    <i class="fa fa-trash-o" aria-hidden="true"></i>
                  </span>
                <% end %>
                <%= link_to edit_tweeet_comment_path(comment), class: 'level-item' do %>
                  <span class="icon">
                    <i class="fa fa-pencil" aria-hidden="true"></i>
                  </span>
                <% end %>
              <% end %>
            </nav>
          </div>
          <div class="media-rigth">
            <%= comment.created_at.strftime("%d/%m/%Y") %>
          </div>
        </article>
      </div>
    <% end %>
